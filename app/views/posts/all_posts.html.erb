
<section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">All Posts</h1>
    </div>
</section>

<div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
       <% @posts.each do |post| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <div class="bd-placeholder-img card-img-top"><%= image_tag(post.image, width: "100%", height: "100%") %></div>
                <div class="card-body">
                    <p class="card-text"><%= post.caption %></p>
                    <p class="card-text"><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'View', post %></button>
                        </div>
                        <small class="text-muted">9 mins</small>
                    </div>
                </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
