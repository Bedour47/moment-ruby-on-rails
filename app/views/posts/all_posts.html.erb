<h1>All Posts</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Caption</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%=%>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag(post.image, size: "100x100") %></td>
        <td><%= post.caption %></td>
        <td><%= post.user.name %></td>
        <td><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>