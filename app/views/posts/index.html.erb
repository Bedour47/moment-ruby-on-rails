<p id="notice"><%= notice %></p>


<main role="main">

<section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading"><%= current_user.name %>'s Posts</h1>
      <p class="lead text-muted">Something short and leading about the collection below—its contents, the creator, etc. Make it short and sweet, but not too short so folks don’t simply skip over it entirely.</p>
      <p>
        <a href="#" class="btn btn-primary my-2">View Likes</a>
      </p>
    </div>
  </section>


  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
       <% @posts.each do |post| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><title>Image</title><rect width="100%" height="100%" fill="#55595c"></rect></svg>
                <div class="card-body">
                    <p class="card-text"><%= post.caption %></p>
                    <p class="card-text"><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'View', post %></button>
                          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Edit', edit_post_path(post) %></button>
                          <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
                        </div>
                        <small class="text-muted">9 mins</small>
                    </div>
                </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  </main>

  <table>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= image_tag(post.image, size: "100x100") %></td>
        <td><%= post.caption %></td>
        <td><%= post.user.name %></td>
        <td><%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>